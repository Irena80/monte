---
// filepath: /Users/irena80/Documents/GitHub/monte/src/pages/aktiviteter.astro
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';
import ImageCard1 from '~/components/ImageCard1.astro';


const metadata = {
  title: 'Utforska',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Kusten',
        href: '/kusten',
        target: '_blank',
        icon: 'tabler:sun',
      },
      { text: 'Inlandet', icon:'tabler:mountain', href: 'resor/gruppresor/inlandet' },
    ]}
  >
    <Fragment slot="title">
      Upptäck<span class="hidden sm:inline"> och utforska</span> den vilda <span class="text-accent dark:text-white highlight">Montenegro</span>
    </Fragment>
    <Fragment slot="subtitle">
      Upplev nöjen året runt med äventyr för den medvetna, aktiva och ständigt nyfikna.
    </Fragment>
    <Fragment slot="image">
      <video controls autoplay muted playsinline class="w-full h-auto">
        <source src="/images/vildamng.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </Fragment>
  </Hero>
  
  <!-- Content Widget **************** -->
  <Content
    title="Destination för alla årstider"
    subtitle="Här har vi listat de mest populäraste aktiviteter."
    items={[]}
  >
  </Content>
  
  <!-- Add ImageCards -->
  <div class="text-center relative mx-auto max-w-7xl px-4 md:px-3 py-12 md:py-16 lg:py-10 text-default">
    <div class="relative m-auto max-w-5xl">
      <img src="../images/morecovek.webp" alt="Your Image" class="min-w-full h-auto mb-8 same-size" />
    </div>
  </div>

  <h2 class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl mb-2 text-center">Letar du efter fler idéer till din resa?</h2>
  <p class="text-lg text-center mt-4">Utforska den fantastiska kusten och dess dolda skatter</p> <br>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4 m-2">
    <ImageCard1
      imageUrl="../images/cykla4.jpg"
      title="Cykla"
      link="/sunny-beach"
    />
    <ImageCard1
      imageUrl="../images/jedrenje.jpg"
      title="Segling"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/dyka.jpg"
      title="Dykning"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/ridning.jpg"
      title="Ridning"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/zicara2.webp"
      title="Linbana"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/rafting2.webp"
      title="Rafting"
      link="/sunny-beach"
    />
    <ImageCard1
      imageUrl="../images/kolasinski.jpg"
      title="Skidåkning"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/kanjon1.webp"
      title="Canyoning"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/paragliding.webp"
      title="Paragliding"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/jeep2.jpg"
      title="Kolašin Jeep Safari"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/kajaking2.jpg"
      title="Kayaking on Skadar sjön"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/flygfiske.webp"
      title="Flygfiske"
      link="/sunny-beach"
    />
    <ImageCard1
      imageUrl="../images/zipline.webp"
      title="Zip Line"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/dipovi.jpg"
      title="Quad-turer"
      link="/mountain-adventure"
    />
    <ImageCard1
      imageUrl="../images/hiking.webp"
      title="Vandring & Trekking"
      link="/mountain-adventure"
    />
  </div>
</Layout>

<style>
  .card-image {
    width: 80%;
    height: 100px; /* Set a fixed height */
    object-fit: cover; /* Ensure the image covers the area */
  }
</style>