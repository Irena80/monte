---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Utbud av bästa hotell',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Utbud av bästa hotell"
    title="Någa utvalda hotell vid Adriatiska kusten"
    subtitle="Upptäck de bästa hotellen i Montenegro."
    actions={[
      { variant: 'primary', text: 'Call to Action', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '#' },
    ]}
    image={{
      src: '~/assets/images/meljine.jpg',
      alt: 'Magnet attracting screws. Lead generation landing page demo',
    }}
  />

  <CallToAction
    title="“At the birth of our planet, the most beautiful encounter between the land and the sea must have happened at the coast of Montenegro. When the pearls of nature were sown, handfuls of them were cast on this soil.” "
    subtitle="Lord Byron"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
