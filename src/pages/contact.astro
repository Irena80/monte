---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Kontakta oss',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontakta oss" title="Hör av dig till oss!" />

  <ContactUs
    title="Berätta gärna vad ni efterfrågar för resepaket!"
    subtitle="För snabbare svar, utforska FAQ del. Du kanske hittar svar du letar efter just där! Om inte, hjälper vårt supportteam dig gärna."
    inputs={[
      {
        type: 'text',
        name: 'namn',
        label: 'Namn',
      },
      {
        type: 'E-post',
        name: 'E-post',
        label: 'E-post',
      },
    ]}
    textarea={{
      label: 'Meddelande',
    }}
    disclaimer={{
      label:
        'Genom att skicka in detta kontaktformulär godkänner och samtycker du till insamlingen av dina personuppgifter.',
    }}
    description="Vårt supportteam svarar inom 24 timmar."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Låt oss hjälpa till!"
    items={[
      {
        title: 'Support',
        description: `Chatta med oss för förfrågningar kring resor, planeringen inför resan, bokningen eller om ni har frågor som rör betalning, ändringar mm.`,
      },
      {
        title: 'Säljavdelning',
        description:
          'Chatta med oss om ni vill beställa ett resepaket eller har frågor om redan köpta resepaket.',
      },
      {
        title: 'Teknisk support',
        description:
          'Chatta med oss om ni behöver hjälp med bokningar.',
      },
      {
        title: 'Kontakt',
        description: '+46 (0) 73 756 71 96',
        icon: 'tabler:headset',
      },
      {
        title: 'E-post',
        description: 'info@mediteranobay.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Mediteranobay Travel',
        description: 'Stockholm, Sverige',
        icon: 'tabler:map-pin',
      },
    ]}
  />
  
</Layout>
