---
interface Props {
    title: string;
    price: string;
    location: string;
    description: string;
    imageURL: string;
    href: string; // Add href to the Props interface
}
const { title, price, location, description, imageURL, href } = Astro.props;
---

<div class="grid grid-cols-1 justify-between md:grid-cols-3 mb-4 p-2 bg-white shadow-md hover:shadow-lg">
    <img
        src={`../src/assets/images/${imageURL}`}
        class="h-72 w-full object-cover"
        alt={title}
    />
    <div>
        <a href={href} class="block">
            <h1 class="bold font-bold text-3xl p-4">{title}</h1>
        </a>
        <h2 class="p-2">{location}</h2>
        <p class="p-4">{description}</p>
    </div>
    <div class="items-right">
        <h3>Pris från: <span class="text-4xl font-bold">{price} sek</span></h3>
        <a href={href} class="mt-48 w-1/3 p-4 bg-blue-500 text-white inline-block text-center font-bold rounded-md">Läs mer </a>
    </div>
</div>