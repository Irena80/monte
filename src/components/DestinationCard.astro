---
// filepath: /Users/irena80/Documents/GitHub/monte/src/components/DestinationCard.astro
export interface Props {
  link: string;
  imageURL: string;
  destination: string;
  title: string;
  text: string;
}

const { link, imageURL, destination, title, text } = Astro.props;
---

<style>
  .fixed-size {
    width: 100%; /* Make the image responsive */
    height: 100%; /* Fill the entire card */
    object-fit: cover; /* Ensure the image covers the entire area */
  }
  .card-container {
    width: 100%; /* Make the card responsive */
    position: relative; /* Enable absolute positioning for child elements */
    margin: 0; /* Remove margin to eliminate white space */
    overflow: hidden; /* Ensure content does not overflow */
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%; /* Cover the entire card */
    background: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
    color: white;
    padding: 0.5rem;
    text-align: center;
    opacity: 0; /* Initially hidden */
    transition: opacity 0.3s ease; /* Smooth transition */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .card-container:hover .overlay {
    opacity: 1; /* Show on hover */
  }
  .title {
    font-size: 1.25rem; /* Reduce font size for title */
    font-weight: bold;
    margin-bottom: 1rem;
  }
  .text {
    font-size: 1rem; /* Reduce font size for text */
  }

  @media (min-width: 768px) {
    .card-container {
      width: 100%; /* Make the card responsive */
      height: 400px; /* Set the height for larger screens */
    }
    .title {
      font-size: 1.5rem; /* Adjust font size for larger screens */
    }
    .text {
      font-size: 1.25rem; /* Adjust font size for larger screens */
    }
  }
</style>

<a href={link} class="block">
  <div class="card-container rounded-3xl shadow-2xl overflow-hidden">
    <img
      class="fixed-size"
      src={`/src/assets/images/${imageURL}`}
      alt={destination}
    />
    <div class="overlay">
      <h3 class="title">{title}</h3>
      <p class="text mt-2">{text}</p>
    </div>
  </div>
</a>